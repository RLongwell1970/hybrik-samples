{
    "definitions": {
        "profile_name": "copy_folder",
        "source_path": "s3://hybrik-examples/public/sources",
        "destination": "s3://hybrik-examples/public/output/features/data_movement/{{profile_name}}"
    },
    "name": "{{profile_name}}:  {{source_path}}",
    "payload": {
        "elements": [
            {
                "uid": "folder_enum",
                "kind": "folder_enum",
                "payload": {
                    "source": {
                        "storage_provider": "s3",
                        "path": "{{source_path}}"
                    },
                    "settings": {
                        "pattern_matching": "wildcard",
                        "wildcard": "TOS*",
                        "recursive": true
                    }
                }
            },
            {
                "kind": "copy",
                "uid": "copy_task",
                "payload": {
                    "target": {
                        "location": {
                            "storage_provider": "s3",
                            "path": "{{destination}}/{source_relative_folder}"
                        },
                        "existing_files": "replace",
                        "file_pattern": "%F"
                    },
                    "options": {
                        "delete_source_on_completion": false
                    }
                }
            }
        ],
        "connections": [
            {
                "from": [
                    {
                        "element": "folder_enum"
                    }
                ],
                "to": {
                    "success": [
                        {
                            "element": "copy_task"
                        }
                    ]
                }
            }
        ]
    }
}