{
    "definitions": {
        "profile_name": "subtitle_imprint",
        "source_path": "s3://hybrik-examples/public/sources",
        "source": "s3://hybrik-examples/public/sources/tears_of_steel_720p.mov",
        "subtitle": "TOS-en.srt",
        "destination_path": "s3://hybrik-examples/public/output/features/filters/{{profile_name}}"
    },
    "name": "{{profile_name}}:  {{source}}",
    "payload": {
        "elements": [
            {
                "uid": "sources",
                "kind": "source",
                "payload": {
                    "kind": "asset_complex",
                    "payload": {
                        "asset_versions": [
                            {
                                "asset_components": [
                                    {
                                        "kind": "name",
                                        "name": "{{source}}",
                                        "location": {
                                            "storage_provider": "s3",
                                            "path": "{{source_path}}"
                                        },
                                        "contents": [
                                            {
                                                "kind": "video"
                                            },
                                            {
                                                "kind": "audio"
                                            }
                                        ]
                                    },
                                    {
                                        "kind": "name",
                                        "name": "{{subtitle}}",
                                        "location": {
                                            "storage_provider": "s3",
                                            "path": "{{source_path}}"
                                        },
                                        "contents": [
                                            {
                                                "kind": "subtitle",
                                                "payload": {
                                                    "format": "auto",
                                                    "language": "english",
                                                    "sync_to_timecode": true
                                                }
                                            }
                                        ]
                                    }
                                ]
                            }
                        ]
                    }
                }
            },
            {
                "uid": "transcode_task",
                "kind": "transcode",
                "payload": {
                    "location": {
                        "storage_provider": "s3",
                        "path": "{{destination_path}}"
                    },
                    "targets": [
                        {
                            "file_pattern": "{{profile_name}}{default_extension}",
                            "existing_files": "replace",
                            "container": {
                                "kind": "mp4",
                                "faststart": true
                            },
                            "video": {
                                "codec": "h264",
                                "width": 1200,
                                "profile": "high",
                                "crf": "23",
                                "filters": [
                                    {
                                        "kind": "print_subtitle",
                                        "payload": {
                                            "y_offset": "20%"
                                        }
                                    }
                                ]
                            },
                            "audio": [
                                {
                                    "codec": "aac",
                                    "channels": 2,
                                    "sample_rate": 48000,
                                    "bitrate_kb": 128,
                                    "bitrate_mode": "vbr"
                                }
                            ]
                        }
                    ]
                }
            }
        ],
        "connections": [
            {
                "from": [
                    {
                        "element": "sources"
                    }
                ],
                "to": {
                    "success": [
                        {
                            "element": "transcode_task"
                        }
                    ]
                }
            }
        ]
    }
}
