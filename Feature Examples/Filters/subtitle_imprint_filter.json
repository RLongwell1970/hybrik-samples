{
  "definitions": {
    "profile_name": "subtitle_imprint",
		"type": "features",
    "category": "filters",
		"source_filename": "tears_of_steel_720p.mov",
    "subtitle": "TOS-en.srt",

		"source_path": "s3://hybrik-examples/public/sources",
		"destination_basepath": "s3://hybrik-examples/public/output",
		"source": "{{source_path}}/{{source_filename}}",
		"destination_path": "{{destination_basepath}}/{{type}}/{{category}}/"
  },
  "name": "{{profile_name}}:  {{source}}",
  "payload": {
    "elements": [
      {
        "uid": "sources",
        "kind": "source",
        "payload": {
          "kind": "asset_complex",
          "payload": {
            "asset_versions": [
              {
                "asset_components": [
                  {
                    "kind": "name",
                    "name": "{{source}}",
                    "location": {
                      "storage_provider": "s3",
                      "path": "{{source_path}}"
                    },
                    "contents": [
                      {
                        "kind": "video"
                      },
                      {
                        "kind": "audio"
                      }
                    ],
                    "trim": {
                      "outpoint_sec": 240
                    }
                  },
                  {
                    "kind": "name",
                    "name": "{{subtitle}}",
                    "location": {
                      "storage_provider": "s3",
                      "path": "{{source_path}}"
                    },
                    "contents": [
                      {
                        "kind": "subtitle",
                        "payload": {
                          "standard": "auto",
                          "language": "english",
                          "sync_to_timecode": true
                        }
                      }
                    ],
                    "trim": {
                      "outpoint_sec": 240
                    }
                  }
                ]
              }
            ]
          }
        }
      },
      {
        "kind": "transcode",
        "uid": "transcode_task",
        "payload": {
          "location": {
            "storage_provider": "s3",
            "path": "{{destination_path}}"
          },
          "targets": [
            {
              "file_pattern": "{{profile_name}}{default_extension}",
              "existing_files": "replace",
              "container": {
                "kind": "mp4",
                "faststart": true
              },
              "video": {
                "width": 1200,
                "codec": "h264",
                "profile": "high",
                "crf": "23",
                "filters": [
                  {
                    "kind": "print_subtitle",
                    "payload": {
                      "y_offset": "20%"
                    }
                  }
                ]
              },
              "audio": [
                {
                  "codec": "aac",
                  "channels": 2,
                  "sample_rate": 48000,
                  "sample_size": 16,
                  "bitrate_kb": 128,
                  "bitrate_mode": "vbr"
                }
              ]
            }
          ]
        }
      }
    ],
    "connections": [
      {
        "from": [
          {
            "element": "sources"
          }
        ],
        "to": {
          "success": [
            {
              "element": "transcode_task"
            }
          ]
        }
      }
    ]
  }
}