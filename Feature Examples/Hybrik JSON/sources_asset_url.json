{
    "definitions": {
        "descriptor": "sources_asset_url_example",
        "source": "s3://hybrik-examples/public/sources/tears_of_steel_1080p.mov",
        "file_pattern": "{{descriptor}}{default_extension}",
        "destination_path": "s3://hybrik-examples/public/output/feature_examples/hybrik_json/{{descriptor}}"
    },
    "name": "{{descriptor}}: {{source}}",
    "payload": {
        "elements": [
            {
                "uid": "source_file",
                "kind": "source",
                "payload": {
                    "kind": "asset_url",
                    "payload": {
                        "storage_provider": "s3",
                        "url": "{{source}}"
                    }
                }
            },
            {
                "uid": "transcode_task",
                "kind": "transcode",
                "task": {
                    "retry_method": "retry",
                    "retry": {
                        "count": 1,
                        "delay_sec": 30
                    }
                },
                "payload": {
                    "location": {
                        "storage_provider": "s3",
                        "path": "{{destination_path}}"
                    },
                    "targets": [
                        {
                            "file_pattern": "{{file_pattern}}",
                            "existing_files": "replace",
                            "container": {
                                "kind": "mp4"
                            },
                            "video": {
                                "codec": "h264",
                                "width": 1280,
                                "height": 720,
                                "bitrate_kb": 1000
                            },
                            "audio": [
                                {
                                    "codec": "aac",
                                    "channels": 2,
                                    "sample_rate": 44100,
                                    "bitrate_kb": 128
                                }
                            ]
                        }
                    ]
                }
            }
        ],
        "connections": [
            {
                "from": [
                    {
                        "element": "source_file"
                    }
                ],
                "to": {
                    "success": [
                        {
                            "element": "transcode_task"
                        }
                    ]
                }
            }
        ]
    }
}