{
    "definitions": {
        "profile_name": "180_second_segmenting",
        "source": "s3://hybrik-examples/public/sources/tears_of_steel_1080p.mov",
        "destination_path": "s3://hybrik-examples/public/output/features/temporal_segmenting/{{profile_name}}"
    },
    "name": "{{profile_name}}:  {{source}}",
    "payload": {
        "elements": [
            {
                "uid": "source_file",
                "kind": "source",
                "payload": {
                    "kind": "asset_url",
                    "payload": {
                        "storage_provider": "s3",
                        "url": "{{source}}"
                    }
                }
            },
            {
                "uid": "transcode_task",
                "kind": "transcode",
                "payload": {
                    "location": {
                        "storage_provider": "s3",
                        "path": "{{destination_path}}"
                    },
                    "source_pipeline": {
                        "segmented_rendering": {
                            "duration_sec": 180
                        }
                    },
                    "targets": [
                        {
                            "file_pattern": "{{profile_name}}{default_extension}",
                            "existing_files": "replace",
                            "container": {
                                "kind": "mp4",
                                "faststart": true
                            },
                            "video": {
                                "height": 1080,
                                "codec": "h264",
                                "profile": "high",
                                "crf": "23"
                            },
                            "audio": [
                                {
                                    "codec": "aac",
                                    "channels": 2,
                                    "sample_rate": 48000,
                                    "bitrate_kb": 128,
                                    "bitrate_mode": "vbr"
                                }
                            ]
                        }
                    ]
                }
            }
        ],
        "connections": [
            {
                "from": [
                    {
                        "element": "source_file"
                    }
                ],
                "to": {
                    "success": [
                        {
                            "element": "transcode_task"
                        }
                    ]
                }
            }
        ]
    }
}