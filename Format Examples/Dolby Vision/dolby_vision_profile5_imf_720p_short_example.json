{
    "definitions": {
        "descriptor": "dolby_vision_profile5_imf_720p_short_example",
        "source_url": "s3://download.opencontent.netflix.com/Meridian/MER_SHR_C_EN-XX_US-NR_51_LTRT_UHD_20160913_OV/MER_SHR_C_EN-XX_US-NR_51_LTRT_UHD_20160913_OV/CPL_MER_SHR_C_EN-XX_US-NR_51_LTRT_UHD_20160913_OV_a8f500d1-ba98-4598-815b-54fa640661d6.xml",
        "destination_path": "s3://hybrik-examples/public/output/format_examples/dolby_vision/{{descriptor}}",
        "segmented_rendering": {
            "duration_sec": 60
        },
        "output_basename": "{source_basename}",
        "transcode_preset": "veryfast",
        "compiler_tags": [
            "dolby_vision_encode"
        ],
        "mezzQC_tags": [
            "dolby_vision_encode"
        ],
        "preproc_tags": [
            "dolby_vision_preproc"
        ],
        "transcode_tags": [
            "dolby_vision_encode"
        ],
        "post_transcode_stage_tags": [
            "dolby_vision_encode"
        ]
    },
    "name": "{{descriptor}}: {{source_url}}",
    "payload": {
        "elements": [
            {
                "uid": "source",
                "kind": "source",
                "payload": {
                    "kind": "asset_url",
                    "payload": {
                        "storage_provider": "s3",
                        "url": "{{source_url}}",
                        "options": {
                            "resolve_manifest": true
                        },
                        "trim": {
                            "duration_sec": 90
                        }
                    }
                }
            },
            {
                "uid": "mezzanine_qc",
                "kind": "dolby_vision",
                "task": {
                    "name": "Mezzanine QC",
                    "tags": "{{mezzQC_tags}}"
                },
                "payload": {
                    "module": "mezzanine_qc",
                    "params": {
                        "location": {
                            "storage_provider": "s3",
                            "path": "{{destination_path}}"
                        },
                        "file_pattern": "mezz_qc_report.txt",
                        "tool_version": "5.4.0"
                    }
                }
            },
            {
                "uid": "dolby_vision_1280x720",
                "kind": "dolby_vision",
                "task": {
                    "retry_method": "fail",
                    "tags": "{{compiler_tags}}",
                    "name": "Encode - 1280x720",
                    "source_element_uids": [
                        "source"
                    ]
                },
                "payload": {
                    "module": "encoder",
                    "profile": 5,
                    "location": {
                        "storage_provider": "s3",
                        "path": "{{destination_path}}"
                    },
                    "preprocessing": {
                        "task": {
                            "tags": "{{preproc_tags}}"
                        }
                    },
                    "transcodes": [
                        {
                            "uid": "transcode_0",
                            "kind": "transcode",
                            "task": {
                                "tags": "{{transcode_tags}}"
                            },
                            "payload": {
                                "options": {
                                    "pipeline": {
                                        "encoder_version": "hybrik_4.0_10bit"
                                    }
                                },
                                "source_pipeline": {
                                    "options": {},
                                    "segmented_rendering": "{{segmented_rendering}}"
                                },
                                "targets": [
                                    {
                                        "file_pattern": "{{output_basename}}_1280x720_1200kbs.h265",
                                        "existing_files": "replace",
                                        "container": {
                                            "kind": "elementary"
                                        },
                                        "nr_of_passes": 1,
                                        "slow_first_pass": true,
                                        "ffmpeg_args": "-strict experimental",
                                        "video": {
                                            "codec": "h265",
                                            "preset": "{{transcode_preset}}",
                                            "tune": "grain",
                                            "profile": "main10",
                                            "width": 1280,
                                            "height": 720,
                                            "bitrate_kb": 1200,
                                            "max_bitrate_kb": 1440,
                                            "vbv_buffer_size_kb": 960,
                                            "bitrate_mode": "vbr",
                                            "chroma_format": "yuv420p10le",
                                            "exact_gop_frames": 48,
                                            "x265_options": "concatenation={auto_concatenation_flag}:vbv-init=0.6:vbv-end=0.6:annexb=1:hrd=1:aud=1:videoformat=5:range=full:colorprim=2:transfer=2:colormatrix=2:rc-lookahead=48:qg-size=32:scenecut=0:no-open-gop=1:frame-threads=0:repeat-headers=1:nr-inter=400:nr-intra=100:psy-rd=0:cbqpoffs=0:crqpoffs=3"
                                        }
                                    }
                                ]
                            }
                        }
                    ],
                    "post_transcode": {
                        "task": {
                            "tags": "{{post_transcode_stage_tags}}"
                        },
                        "mp4_mux": {
                            "enabled": true,
                            "file_pattern": "{source_basename}.mp4",
                            "elementary_streams": [
                                {
                                    "asset_url": {
                                        "storage_provider": "s3",
                                        "url": "{{destination_path}}/audio_192kbps_elementary.ac3"
                                    },
                                    "cli_options": {}
                                }
                            ],
                            "qc": {
                                "enabled": true,
                                "location": {
                                    "storage_provider": "s3",
                                    "path": "{{destination_path}}/hybrik_temp"
                                },
                                "file_pattern": "{source_basename}_mp4_qc_report.txt"
                            }
                        }
                    }
                }
            },
            {
                "uid": "audio_0",
                "kind": "transcode",
                "task": {
                    "tags": "{{transcode_tags}}",
                    "name": "Audio Encode"
                },
                "payload": {
                    "location": {
                        "storage_provider": "s3",
                        "path": "{{destination_path}}"
                    },
                    "targets": [
                        {
                            "file_pattern": "audio_192kbps_elementary.ac3",
                            "existing_files": "replace",
                            "container": {
                                "kind": "elementary"
                            },
                            "audio": [
                                {
                                    "codec": "ac3",
                                    "bitrate_kb": 192,
                                    "channels": 2,
                                    "source": [
                                        {
                                            "track": 1
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
            },
            {
                "uid": "delete_temp_folder",
                "kind": "delete_asset",
                "payload": {
                    "asset_selector": "config",
                    "location": {
                        "storage_provider": "s3",
                        "path": "{{destination_path}}/hybrik_temp"
                    },
                    "delete_folder_acknowledgement": "hybrik_temp"
                }
            }
        ],
        "connections": [
            {
                "from": [
                    {
                        "element": "source"
                    }
                ],
                "to": {
                    "success": [
                        {
                            "element": "mezzanine_qc"
                        },
                        {
                            "element": "audio_0"
                        }
                    ]
                }
            },
            {
                "from": [
                    {
                        "element": "mezzanine_qc"
                    },
                    {
                        "element": "audio_0"
                    }
                ],
                "to": {
                    "success": [
                        {
                            "element": "dolby_vision_1280x720"
                        }
                    ]
                }
            },
            {
                "from": [
                    {
                        "element": "dolby_vision_1280x720"
                    }
                ],
                "to": {
                    "success": [
                        {
                            "element": "delete_temp_folder"
                        }
                    ]
                }
            }
        ]
    },
    "priority": "100"
}