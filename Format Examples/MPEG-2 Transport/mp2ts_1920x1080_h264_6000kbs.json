{
	"definitions": {
		"profile_name": "mp2ts_1920x1080_h264_6000kbs",
		"category": "mp2ts",
		"source_filename": "tears_of_steel_1080p.mov",
		"type": "formats",

		"source_path": "s3://hybrik-examples/public/sources",
		"destination_basepath": "s3://hybrik-examples/public/output",
		"source": "{{source_path}}/{{source_filename}}",
		"destination_path": "{{destination_basepath}}/{{type}}/{{category}}/"
	},
	"name": "{{profile_name}}: {{source}}",
	"payload": {
		"elements": [
			{
				"uid": "source_file",
				"kind": "source",
				"payload": {
					"kind": "asset_url",
					"payload": {
						"storage_provider": "s3",
						"url": "{{source}}",
						"trim": {
							"inpoint_sec": 30,
							"duration_sec": 10
						}
					}
				}
			},
			{
				"uid": "transcode_task",
				"kind": "transcode",
				"payload": {
					"location": {
						"storage_provider": "s3",
						"path": "{{destination_path}}"
					},
					"targets": [
						{
							"file_pattern": "{{profile_name}}{default_extension}",
							"existing_files": "replace",
							"container": {
								"kind": "mpegts"
							},
							"video": {
								"width": 1920,
								"height": 1080,
								"codec": "h264",
								"bitrate_mode": "vbr",
								"bitrate_kb": 6000,
								"max_bitrate_kb": 7200
							},
							"audio": [
								{
									"codec": "mp2",
									"channels": 2,
									"bitrate_kb": 192
								}
							]
						}
					]
				}
			}
		],
		"connections": [
			{
				"from": [
					{
						"element": "source_file"
					}
				],
				"to": {
					"success": [
						{
							"element": "transcode_task"
						}
					]
				}
			}
		]
	}
}
