{
    "definitions": {
        "descriptor": "mxf_1920x1080_dnxhd_120000kbs",
        "source": "s3://hybrik-examples/public/sources/tears_of_steel_1080p.mov",
        "destination_path": "s3://hybrik-examples/public/output/format_examples/mxf/{{descriptor}}"
    },
    "name": "{{descriptor}}: {{source}}",
    "payload": {
        "elements": [
            {
                "uid": "source_file",
                "kind": "source",
                "payload": {
                    "kind": "asset_url",
                    "payload": {
                        "storage_provider": "s3",
                        "url": "{{source}}",
                        "trim": {
                            "inpoint_sec": 30,
                            "duration_sec": 10
                        }
                    }
                }
            },
            {
                "uid": "transcode_task",
                "kind": "transcode",
                "task": {
                    "retry_method": "fail"
                },
                "payload": {
                    "location": {
                        "storage_provider": "s3",
                        "path": "{{destination_path}}"
                    },
                    "targets": [
                        {
                            "file_pattern": "{{descriptor}}{default_extension}",
                            "existing_files": "replace",
                            "container": {
                                "kind": "mxf"
                            },
                            "video": {
                                "codec": "dnxhd",
                                "width": 1920,
                                "height": 1080,
                                "frame_rate": 25,
                                "interlace_mode": "progressive",
                                "bitrate_kb": 120000
                            },
                            "audio": [
                                {
                                    "channels": 2,
                                    "sample_rate": 48000
                                }
                            ]
                        }
                    ]
                }
            }
        ],
        "connections": [
            {
                "from": [
                    {
                        "element": "source_file"
                    }
                ],
                "to": {
                    "success": [
                        {
                            "element": "transcode_task"
                        }
                    ]
                }
            }
        ]
    }
}
