{
	"definitions": {
		"profile_name": "xdcam_hd_mxf_1920x1080_mpeg2_35000kbs_vbr_25p_2trk",
		"category": "mxf",
		"source_filename": "tears_of_steel_1080p.mov",
		"type": "formats",
		"source_path": "s3://hybrik-examples/public/sources",
		"destination_basepath": "s3://hybrik-examples/public/output",
		"source": "{{source_path}}/{{source_filename}}",
		"destination_path": "{{destination_basepath}}/{{type}}/{{category}}/"
	},
	"name": "{{profile_name}}:  {{source}}",
	"payload": {
		"elements": [
			{
				"uid": "source_file",
				"kind": "source",
				"payload": {
					"kind": "asset_url",
					"payload": {
						"storage_provider": "s3",
						"url": "{{source}}",
						"trim": {
							"inpoint_sec": 30,
							"duration_sec": 10
						}
					}
				}
			},
			{
				"uid": "transcode_task",
				"kind": "transcode",
				"payload": {
					"location": {
						"storage_provider": "s3",
						"path": "{{destination_path}}"
					},
					"targets": [
						{
							"file_pattern": "{{profile_name}}{default_extension}",
							"existing_files": "replace",
							"container": {
								"kind": "mxf"
							},
							"compliance": "xdcam_hd",
							"video": {
								"codec": "mpeg2",
								"bitrate_mode": "vbr",
								"width": 1920,
								"height": 1080,
								"bitrate_kb": 35000,
								"frame_rate": 25
							},
							"audio": [
								{
									"codec": "pcm",
									"channels": 1,
									"sample_rate": 48000,
									"sample_size": 16
								},
								{
									"codec": "pcm",
									"channels": 1,
									"sample_rate": 48000,
									"sample_size": 16
								}
							]
						}
					]
				}
			}
		],
		"connections": [
			{
				"from": [
					{
						"element": "source_file"
					}
				],
				"to": {
					"success": [
						{
							"element": "transcode_task"
						}
					]
				}
			}
		]
	}
}
